{
  "name": "web-based-hmi",
  "version": "0.1.0",
  "type": "module",
  "private": true,
    "scripts": {
      "dev": "next dev -p 3000",
      "dev:all": "concurrently -k -n NEXT,PLC -c blue,magenta \"next dev -p 3000\" \"npm:plcServer\"",
      "build": "npm run build:hmi && next build",
      "start": "next start -p 3000",
      "plcServer": "node src/app/backend/server/express/index.js",
      "build:hmi": "cross-env HMI_DEBUG=1 node src/app/scripts/build-pages.mjs",
      "lint": "next lint"
    },
  "dependencies": {
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "express": "^5.1.0",
    "inquirer": "^12.8.0",
    "modbus-serial": "^8.0.21-no-serial-port",
    "next": "^15.4.5",
    "react": "^19.1.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^19.1.1",
    "react-grid-layout": "^1.5.2",
    "react-resizable": "^3.0.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-grid-layout": "^1.3.5",
    "concurrently": "^9.2.0",
    "cross-env": "^10.1.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
